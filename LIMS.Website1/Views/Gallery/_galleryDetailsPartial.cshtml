@model GalleryModel
@{ 
    int i = 1;

}
<section>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h3 class="text-primary">
                    <i class="fa fa-picture-o"></i>
                    @Model.Title
                </h3>
            </div>


            @foreach (var item in Model.Images)
            {
                <div class="col-md-3">
                    <a data-gallery="bookGallery" data-caption="@("Image"+i)" data-group="a" href="@item.PictureUrl">
                        <div class="thumbnail text-center">

                            <image src='@item.PictureUrl' style="height:200px;width:200px;" alt=""></image>
                            @*<font style="overflow: hidden;text-overflow: ellipsis;display: -webkit-box;-webkit-box-orient: vertical;-webkit-line-clamp:2;">@item.Title</font>*@

                        </div>
                    </a>

                </div>
            }
         
        </div>
        
    </div>
</section>
