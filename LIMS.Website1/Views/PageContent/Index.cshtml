@model PageContentModel
    <section>
        @if (Model != null)
        {
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <label class="text-primary">
                                    <i class="fa fa-align-left"></i>
                                    @Model.Title
                                </label>
                            </div>
                            <div class="panel-body">
                                <p>
                                    @Model.Description
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <partial name="~/views/shared/_RecordNotFound.cshtml" />
        }
    </section>