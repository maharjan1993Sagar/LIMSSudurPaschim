@model LIMS.Website1.Models.MarketView


<section>



    <div class="container">
        <div class="row">
            <div class="col-md-12">
               
            </div>
            <form method="post">
                <div class="col-md-3">
                    <div class="form-group">
                        <label>
                            Fiscal year

                        </label>
                        <select onchange="this.form.submit()" name="fiscalYear" class="form-control" asp-items=@ViewBag.fiscalyear>
                        </select>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label>
                            District

                        </label>
                        <select onchange="this.form.submit()" name="districts" class="form-control" asp-items='@ViewBag.district'>
                        </select>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label>
                            Name of market

                        </label>
                        <select onchange="this.form.submit()" name="type" class="form-control" asp-items="@ViewBag.type">
                        </select>
                    </div>
                </div>
