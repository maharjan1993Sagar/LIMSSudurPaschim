            </form>
            <div class="col-md-12">
                <table id="tblPublication" class="table table-responsive table-bordered">
                    <thead>
                        <tr style="background: #fefefe;">
                            @foreach(var item in Model.CropName)
                            {
                                <th>
                                    @item
                                </th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Data.Any())
                        {
                            int i = 1;
                            @foreach (var item in Model.Data)

                            {
                                <tr>
                                    @foreach (var a in item.Data)
                                    {
                                    <td>
                                        @a
                                    </td>
                                    }
                                </tr>
                                i++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6">No record found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>




</section>