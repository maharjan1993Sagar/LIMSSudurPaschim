@model List<EmployeeModel>
@using LIMS.Website1.Data 
@inject IGetLabel _lbl
@{

    int i = 1;
}
<section>
    <div class="container">
        <div class="row">

            <div class="col-md-12">
                <h2>
                    @{_lbl.GetByName("Employee.Employee", "");}
                </h2>
                <table class="table table-bordered table-responsive">
                    <thead>
                        <tr>
                            <th>
                                @{_lbl.GetByName("Employee.SN", "");}
                            </th>
                            <th>
                                @{_lbl.GetByName("Employee.Name", "");}
                            </th>
                            <th>
                                @{_lbl.GetByName("Employee.Designation", "");}

                            </th>
                            <th>
                                @{_lbl.GetByName("Employee.Photo", "");}

                            </th>

                            <th>
                                @{_lbl.GetByName("Employee.Email", "");}

                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var item in Model)
                            {

                                <tr>
                                    <td>@(i)</td>
                                    <td>@item.Name</td>
                                    <td>@item.Designation</td>
                                    <td>
                                        <image src='@item.Image.PictureUrl' onerror="if (this.src != 'error.jpg') this.src = '~/Dolfd/img/user.jpg';"
                                               style="height: 100px; width: 120px;" alt=""></image>
                                    </td>
                                    <td>@item.Email1</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                        <td colspan="5">No record found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
