@model List<EmployeeModel>
@{

    int i = 1;
}
<section>
    <div class="container">
        <div class="row">

            <div class="col-md-12">
                <table class="table table-bordered table-responsive">
                    <thead>
                        <tr>
                            <th>
                                S.N.
                                @*सि.नं.*@
                            </th>
                            <th>
                                Name
                                @*नाम, थर*@
                            </th>
                            <th>
                                Designation
                                @*पद*@
                            </th>
                            <th>
                                Photo
                                @*फोटो*@
                            </th>

                            <th>
                                Email
                                @*इमेल*@
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var item in Model)
                            {

                                <tr>
                                    <td>@(i)</td>
                                    <td>@item.Name</td>
                                    <td>@item.Designation</td>
                                    <td>
                                        <image src='@item.Image.PictureUrl' onerror="if (this.src != 'error.jpg') this.src = '~/Dolfd/img/user.jpg';"
                                               style="height: 100px; width: 120px;" alt=""></image>
                                    </td>
                                    <td>@item.Email1</td>
                                </tr>
                                 i=i+1;
                            }
                        }
                        else
                        {
                            <tr>
                        <td colspan="5">No record found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
