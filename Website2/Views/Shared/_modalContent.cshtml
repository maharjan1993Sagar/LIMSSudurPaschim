@model List<PopupModel>

@if (Model.Count > 0)
{

    <style type="text/css">
        /* Adjust opacity of modal background (backdrop) */
        .modal-backdrop {
            opacity: 0.3 !important; /* Set to 0.3 for less opacity */
        }  
    </style>
<div class="modal fade" id="modal" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
            <h5 class="modal-title" id="modalLabel">सूचना</h5>
            @*<button type="button" class="btn btn-close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>*@
            </div>
            <div class="modal-body">

                @if (Model.Any())
                {
                    foreach (var record in Model)
                    {
                        <div class="record-item">
                            <h4><strong>@record.Title</strong></h4>
                            <p>@Html.Raw(record.Description)</p>
                        </div>
                        <hr />
                    }
                }
                else
                {
                    <p>No records found.</p>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-close btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
}

