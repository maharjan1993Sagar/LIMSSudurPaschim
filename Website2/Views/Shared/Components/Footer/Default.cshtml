@model FooterViewModel

<div class="container-fluid">
    <div class="row">
        <div class="col-12 col-sm-3 col-md-2">

            <div class="footer-c-title">
                <span>Spokeperson</span>
            </div>
            <div class="s-area">
                <div class="spoke-person-area">
                    <div class="member-area">
                        <div class="member-img">
                            <img src='@((Model.SpokePerson!=null&&(!String.IsNullOrEmpty(Model.SpokePerson.Image.PictureUrl)))?Model.SpokePerson.Image.PictureUrl:"/Dolfd/img/111.png")' height="120px" width="100px" />
                        </div>
                        <div class="member-desc">
                            <div class="member-name">
                                @(Model.SpokePerson!=null?Model.SpokePerson.Name: "Name of SpokePerson")                    <!-- <p style="font-weight:  normal;">सम्माननीय प्रधानमन्त्री एवं मन्त्री सञ्चार तथा सूचना प्रविधि ‍</p> -->
                            </div>
                            <div class="member-postion">SpokePerson</div>
                            <div class="member-postion">
                                @(Model.SpokePerson!=null?Model.SpokePerson.OfficePhone: "+977-123456789")                    <!-- <p style="font-weight:  normal;">सम्माननीय प्रधानमन्त्री एवं मन्त्री सञ्चार तथा सूचना प्रविधि ‍</p> -->
                            </div>
                            <div class="member-postion">
                                @(Model.SpokePerson!=null?Model.SpokePerson.Email1: "abc@gmail.com")                    <!-- <p style="font-weight:  normal;">सम्माननीय प्रधानमन्त्री एवं मन्त्री सञ्चार तथा सूचना प्रविधि ‍</p> -->

                            </div>
                        </div>
                    </div>
                </div>
            </div>
           
        </div>
        <div class="col-12 col-sm-3 col-md-2">
            <div class="footer-c-title">Information officer</div>

            <div class="spoke-person-area">
                <div class="member-area">
                    <div class="member-img">
                        <img src='@((Model.InformationOfficer!=null&&(!String.IsNullOrEmpty(Model.SpokePerson.Image.PictureUrl)))?Model.InformationOfficer.Image.PictureUrl:"/Dolfd/img/111.png")' height="120px" width="100px" />
                    </div>
                    <div class="member-desc">
                        <div class="member-name">
                            @(Model.InformationOfficer!=null?Model.InformationOfficer.Name: "Information Officer Name")                    <!-- <p style="font-weight:  normal;">सम्माननीय प्रधानमन्त्री एवं मन्त्री सञ्चार तथा सूचना प्रविधि ‍</p> -->
                        </div>
                        <div class="member-postion">Information officer</div>
                        <div class="member-postion">
                            @(Model.InformationOfficer!=null?Model.InformationOfficer.OfficePhone: "+977-123456789")                    <!-- <p style="font-weight:  normal;">सम्माननीय प्रधानमन्त्री एवं मन्त्री सञ्चार तथा सूचना प्रविधि ‍</p> -->
                        </div>
                        <div class="member-postion">
                            @(Model.InformationOfficer!=null?Model.InformationOfficer.Email1: "abc@gmail.com")                    <!-- <p style="font-weight:  normal;">सम्माननीय प्रधानमन्त्री एवं मन्त्री सञ्चार तथा सूचना प्रविधि ‍</p> -->

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-md-4">
            <div class="footer-c-title">
                Importance Links
            </div>
            <div class="f-content f-others">
                <ul class="list-unstyled">
                    @if (Model.ImportantLinks.Any())
                    {
                        @foreach (var item in Model.ImportantLinks)
                        {
                            <li>
                                <a href="@item.URL">@item.LinkName</a>
                            </li>
                        }
                    }
                    else
                    {
                        <li><a href="http://nepal.gov.np/">Government portal</a></li>
                        <li><a href="https://www.opmcm.gov.np/en/">Office of the Prime Minister and Council of the Ministries</a></li>
                        <li><a href="https://www.npc.gov.np/np/">National Planning Commission</a></li>
                        <li><a href="https://mofaga.gov.np/">The Ministry of Federal Affairs and General Administration</a></li>
                        <li><a href="https://donidcr.gov.np/">Department of National ID and Civil Registration</a></li>
                        <li><a href="http://www.pis.gov.np/welcome">PIS</a></li>
                        <li><a href="https://www.plgsp.gov.np/">Provincial and Local Government Support Program</a></li>
                    }
                </ul>
                    
            </div>

        </div>
        <div class="col-12 col-sm-6 col-md-4">
            <div class="footer-c-title">
                Contact <span>Information</span>
            </div>
            <div class="f-content f-contact">
                <ul class="list-unstyled">
                    <li>   @Model.Customer.OrgName</li>
                    <li>   @Model.Customer.OrgAddress</li>
                    <li class="c-phone"><a href="tel: @(Model.ContactUs!=null?Model.ContactUs.Phone1:"Phone")">Phone: @(Model.ContactUs!=null?Model.ContactUs.Phone1:"Phone")</a></li>
                    <li class="c-email"><a href="@(Model.ContactUs!=null?Model.ContactUs.Email1:"officeEmail@email.com")">Email:@(Model.ContactUs!=null?Model.ContactUs.Email1:"officeEmail@email.com")</a></li>
                   
                </ul>
            </div>
        </div>
    </div>
</div>