@model HeaderViewModel
@using LIMS.Website1.Data
@using System.Globalization
@inject IGetResource getResource
@{
    var aboutUs = getResource.GetByName("AboutUs");

    var culture = CultureInfo.CurrentCulture.ToString();

    var returnUrl = string.IsNullOrEmpty(Context.Request.Path) ? "~/" : $"~{Context.Request.Path.Value}";
    var fullUrl = returnUrl + Context.Request.QueryString.Value ?? "";
    returnUrl = fullUrl;
}
<style>
    .web__topbar {
        padding: 3px 0;
        background-color: #e7e7e7;
    }
    .web__middlebar {
       
        background-color: #2657ba;
    }
@@media only screen and (min-width: 1200px) .ui.container {
    width: 1127px;
    margin-left: auto!important;
    margin-right: auto!important;
}
    .ui.horizontal.list {
        display: inline-block;
        font-size: 0;
    }

.ui.container {
    display: block;
    max-width: 100%!important;
}
    .topbar__frame {
        display: flex;
        flex-direction: row;
        align-items: center;
    }
    .ui.horizontal.list {
        display: inline-block;
        font-size: 0;
    }
    .navbar {
        min-height: 35px !important;
    }


    .ui.list:first-child, ol.ui.list:first-child, ul.ui.list:first-child {
        margin-top: 0;
        padding-top: 0;
    }

    .ui.list {
        font-size: 1em;
    }
    .language {
        margin-left: auto;
    }
    
    .ui.list, ol.ui.list, ul.ui.list {
        list-style-type: none;
        margin: 1em 0;
        padding: 0 0;
    }
    .btn-link {
        font-size: 12px;
        line-height: 1.2;
        display: inline-block;
        vertical-align: top;
        background-color: #4267b2;
        color: #fff;
        padding: 3px 10px;
        border-radius: 3px;
        display: flex;
        align-items: center;
        font-weight: 600;
        transition: all 0.2s ease-in-out;
    }
    .ui.horizontal.list > .item {
        display: inline-block;
        margin-left: 1em;
        font-size: 1rem;
    }
    .language span {
        display: inline-block;
        vertical-align: top;
        width: 22px;
        margin-right: 1px;
        background-color: #222;
        color: #fff;
        font-size: 12px;
        line-height: 12px;
        padding: 3px;
        text-align: center;
        cursor: pointer;
    }
    .dateandtime {
        color: #333;
        font-weight: 600;
        padding: 4px;
        margin: 3px 0 0 !important;
    }
</style>
