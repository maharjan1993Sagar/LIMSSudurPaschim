                                <div class="pull-right npflag">
                                    <img src="/Dolfd/img/nepal-flag.gif" height="50" width="50" style="max-width:fit-content!important">
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <style type="text/css">
            .business-desc {
                width: 65%;
                float: left;
            }

            .web-accesibility .list-inline-item:not(:last-child) {
                margin-right: 0.4rem;
            }

            .web-accesibility .list-inline-item .dateandtime {
                /*font-weight: bold;*/
                color: #4075c5;
                margin: 3px 0 0 !important;
                float: left;
            }

            #ac-wrapper {
                height: 100%;
                left: 0;
                top: 0;
                width: 100%;
                z-index: 1001;
                position: absolute;
                margin: 0 auto;
                text-align: center;
                float: left;
            }

            #popup {
                left: 12.5%;
                position: absolute;
                width: 75%;
                z-index: 1001;
                top: 27px;
                border: 3px solid #fff;
            }

            .over-lay {
                background: rgba(0,0,0,0.8);
                float: left;
                width: 100%;
                position: fixed;
                z-index: 999;
                min-height: 100%;
            }

            #closebutton {
                float: right;
                height: 17px;
                right: 0;
                margin-right: 1px;
                position: absolute;
                margin-top: 4px;
                margin-right: 7px;
            }

            #popup > p {
                margin: 22px 0 10px;
                padding: 30px;
            }

            /* Style the tab */
            .tab {
                overflow: hidden;
                border: 1px solid #ccc;
                background-color: #f1f1f1;
            }

                /* Style the buttons inside the tab */
                .tab button {
                    background-color: inherit;
                    float: left;
                    border: none;
                    outline: none;
                    cursor: pointer;
                    padding: 14px 16px;
                    transition: 0.3s;
                    font-size: 17px;
                }

                    /* Change background color of buttons on hover */
                    .tab button:hover {
                        background-color: #ddd;
                    }

                    /* Create an active/current tablink class */
                    .tab button.active {
                        background-color: #ccc;
                    }

            /* Style the tab content */
            .tabcontent {
                display: none;
                padding: 6px 12px;
                border: 1px solid #ccc;
                border-top: none;
            }

            .col {
                -ms-flex-preferred-size: 0;
                flex-basis: 0;
                -ms-flex-positive: 1;
                flex-grow: 1;
                max-width: 100%;
            }

            .row {
                display: -ms-flexbox;
                display: flex;
                -ms-flex-wrap: wrap;
                /* flex-wrap: wrap; */
                margin-right: -15px;
                margin-left: -15px;
            }
            .nav-link {
                color: white !important;
                font-weight: 500!important;
            }
            .highlight-header {
                background: #2657BA;
                color: #fff;
                padding: 10px 20px;
                margin: auto;
        </style>
        <div class="web__middlebar">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12 col-md-10">
                        <nav class="navbar navbar-expand-lg navbar-light bg-light" style="margin-top:10px;color:#fff">
                            <!-- Brand -->
                            <!-- Toggler/collapsibe Button -->
                            @*<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
                                    <span class="navbar-toggler-icon"></span>
                                </button>*@
                            <!-- Navbar links -->

                            @await Component.InvokeAsync("DynamicMenu")
                        </nav>

                    </div>

                    <div class="col-12 col-md-2">
                        <!--<div class="">
                            <ul class="list-inline font_choice web-accesibility">
                                <li class="list-inline-item" style="display: none;">
                                    <span class="font_choice pull-left">
                                        <div id="rvfs-controllers" class="fontsize-controllers group"></div>
                                        <a href="#" id="contrast"><i class="mocit-eye-crossed"></i></a>
                                    </span>
                                </li>-->
                        @*<li class="list-inline-item seaarch-icon"><a href="#" onclick="searchs()"><i class="mocit-magnifying-glass"></i></a></li>
                            @if (culture == "ne-NP")
                            {
                            <li class="@(culture == "en-US" ? "lang active" : "lang")">
                                <a asp-controller="Home" asp-action="SetLanguage"
                                   asp-route-returnUrl="@returnUrl" asp-route-culture="en-US">ENGLISH<i class="mocit-worldwide"></i></a>
                            </li>
                            }
                            else
                            {

                            <li class="@(culture == "ne-NP" ? "lang active" : "lang")">
                                <a asp-controller="Home" asp-action="SetLanguage"
                                   asp-route-returnUrl="@returnUrl" asp-route-culture="ne-NP">Nepali<i class="mocit-worldwide"></i></a>
                            </li>
                            }*@

                        <!--</ul>
                        </div>-->
                    </div>
                </div>
            </div>
        </div>
        <div class="search-area" style="display: none;">
            <form method="post" action="" id="srch">
                <input type="hidden" name="ci_csrf_token" value="">
                <input type="text" name="search" class="form-control" placeholder="Type and Enter">
            </form>
        </div>
        <form id="langfrm" name="langfrm" method="post" action="#">
            <input type="hidden" name="previous_url" value="/">
            <input type="hidden" name="ci_csrf_token" value="">
            <div class="clearfix"></div>
        </form>
        <script type="text/javascript">
            function changeLanguage() {
                $("#langfrm").attr("action", ""); //"https://mocit.gov.np/welcome/ChangeLanguage"
                $('#langfrm').submit();
            }
            function changeBandwidth() {
                $("#langfrm").attr("action", ""); //"https://mocit.gov.np/change-bandwidth"
                $('#langfrm').submit();
            }
        </script>
        <script>
            function searchs() {
                $(".search-area").toggle();
            }
        </script>
</header>
	

















