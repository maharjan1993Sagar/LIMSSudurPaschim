                    </div>
                    <div role="listitem" class="item">
                        <a class="btn-link" target="_blank" href='@("http://fas.dibugsoft.com/@dmin/login.aspx")'><i class="fas fa-network-wired"></i><span>Office automation</span></a>
                    </div>
                    <div role="listitem" class="item">
                        <a class="btn-link" target="_blank" href='http://103.175.192.249/'><i class="fas fa-network-wired"></i><span>Link to CDMS</span></a>
                    </div>
                </div>
                <div>
                    <ul class="list-inline font_choice web-accesibility" style="margin-left: 150px !important;">
                        <!-- <li class="list-inline-item seaarch"><a href="https://mail.moic.gov.np/login.html" target="_blank">  <i class="mocit-newsletter" style="font-size: 16px;"></i></a></li> -->

                        <li class="list-inline-item" style="float:left;">
                            <span class="font_choice pull-right">
                                <div id="rvfs-controllers" class="fontsize-controllers group" style='float:left;'>
                                    <div class="btn-group">
                                        <a id="btnDecFont"  href="#" class="rvfs-decrease btn" title="Decrease font size">A-</a>
                                        <a id="btnNorFont" href="#" class="rvfs-reset btn" title="Default font size">A</a>
                                        <a id="btnIncFont"  href="#" class="rvfs-increase btn" title="Increase font size">A+</a>
                                        <div class="dateandtime">
                                            <span style="color:black"></span>
                                        </div>
                                    </div>
                                </div>
                                @*<a style="color:#fff;" id="contrast"><i class="fas fa-low-vision"></i></a>*@
                            </span>
                        </li>
                        @*<li class="list-inline-item"><a style="color:#fff;" href="#"
                            >Low Bandwidth</a></li>*@
                        
                    </ul>
                </div>
                <div class="language">
                    <span class='@(culture=="en-US"?"lang active":"lang")'>
                        <a style="color:#fff" asp-controller="Home" asp-action="SetLanguage"
                           asp-route-returnUrl="@returnUrl" asp-route-culture="en-US">EN</a>
                    </span>
                    <span class='@(culture=="ne-NP"?"lang active":"lang")'>
                        <a style="color:#fff" asp-controller="Home" asp-action="SetLanguage"
                           asp-route-returnUrl="@returnUrl" asp-route-culture="ne-NP">NP</a>
                    </span>
                </div>
            </div>
        </div>
    </div>
