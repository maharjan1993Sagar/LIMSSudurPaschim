@model DateTime?
@using System.Globalization
<input id="@Html.IdForModel()" name="@Html.NameForModel()" value="@(Model > DateTime.MinValue ? Model.Value.ToString(CultureInfo.CurrentCulture.DateTimeFormat.UniversalSortableDateTimePattern) : "")" />
<script>
    $(document).ready(function () {
        $("#@Html.IdForModel()").kendoDatePicker({
            format: "dd-MM-yyyy"

        });
    });
</script>