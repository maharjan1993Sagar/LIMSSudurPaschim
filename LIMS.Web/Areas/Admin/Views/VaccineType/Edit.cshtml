                <span asp-validation-for="CommonName"></span>

            </div>
        </div>
        <div class="col-md-3 col-sm-3">

            <div class="form-group">
                <admin-label asp-for="Brand" />
                <admin-input asp-for="Brand" />
                <span asp-validation-for="Brand"></span>

