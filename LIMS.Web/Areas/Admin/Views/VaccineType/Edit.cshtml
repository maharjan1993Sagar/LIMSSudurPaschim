@model VaccinationTypeModel
@{
    //page title
    ViewBag.Title = "Vaccination Type";
}
<form asp-area="@Constants.AreaAdmin" asp-controller="VaccineType" asp-action="Edit" method="post">

    <div class="row">
        <div class="col-md-12">
            <div class="x_panel light form-fit">
                <div class="x_title">
                    <div class="caption">
                        <i class="fa fa-comment"></i>
                        @T("Admin.VaccinationType.Update")
