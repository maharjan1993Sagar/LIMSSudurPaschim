@model LIMS.Web.Areas.Admin.Models.AInR.FarmModel
@{
    //page title
    ViewBag.Title = "Farm";
}
<form method="post" asp-action="Edit">
    <div class="row">
        <div class="col-md-12">
            <div class="x_panel light form-fit">
                <div class="x_title">
                    <div class="caption">
                        <i class="fa fa-language"></i>
                        @T("Admin.Livestock.Farm.EditFarmDetails") - (@Model.NameEnglish)
                        <small><i class="fa fa-arrow-circle-left"></i>@Html.ActionLink(T("Admin.Livestock.Farm.BackToList").Text, "List") </small>
                    </div>
                    
                </div>
                <vc:admin-widget widget-zone="blog_details_buttons" additional-data="null" />

                <admin-tabstrip name="farm-edit">
                    <items>
                        <tabstrip-item text="@T("Admin.Livestock.Farm.Info")" tab-index="0">
                            <content>
                                <div>
                                    <partial name="_CreateOrUpdate" model="Model" />
                                </div>
                            </content>
                        </tabstrip-item>
                        <tabstrip-item text="@T("Admin.Livestock.Farm.Pictures")" tab-index="1" id="tab-picture-farm">
                            <content>
                                <div>
                                    <partial name="_CreateOrUpdate.Pictures" model="Model" />
                                </div>
                            </content>
                        </tabstrip-item>
                        <tabstrip-item text="@T("Admin.Livestock.Farm.Grass")" tab-index="2" id="tab-picture-grass">
                            <content>
                                <div>
                                    <partial name="_CreateOrUpdateGrass" model="Model" />
                                </div>
                            </content>
                        </tabstrip-item>
                        <tabstrip-item text="@T("Admin.Livestock.Farm.Shed")" tab-index="3" id="tab-picture-shed">
                            <content>
                                <div>
                                    <partial name="_CreateOrUpdateShed" model="Model" />
                                </div>
                            </content>
                        </tabstrip-item>

                    </items>
                </admin-tabstrip>
            </div>
        </div>
    </div>
</form>

