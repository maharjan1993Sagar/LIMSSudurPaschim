@inject AdminAreaSettings adminAreaSettings
@{
    //page title
    ViewBag.Title = "Market";
}

<div class="row">
    <div class="col-md-12">
        <div class="x_panel light form-fit">
            <div class="x_title">
                <div class="caption">
                    <i class="fa fa-comment"></i>
                    @T("Admin.Market.LIST")
                </div>
                <div class="actions btn-group btn-group-devided">
                    <a href="@Url.Action("Create")" class="btn green"><i class="fa fa-plus"></i><span class="d-none d-sm-inline"> @T("Admin.Common.AddNew") </span></a>
                </div>
            </div>
            <div class="x_content form">
                <div class="form-horizontal">
                    <div class="form-body">
                        <div class="x_content">
                            <div id="bali-grid"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("#bali-grid").kendoGrid({
            dataSource: {
                transport: {
                    read: {
                        url: "@Html.Raw(Url.Action("List", "Market"))",
                        type: "POST",
                        dataType: "json",
                        data: addAntiForgeryToken
                    }
                },
                schema: {
                    data: "Data",
                    total: "Total",
                    errors: "Errors"
                },
                error: function(e) {
                    display_kendoui_grid_error(e);
                    // Cancel the changes
                    this.cancelChanges();
                },
                pageSize: @(adminAreaSettings.DefaultGridPageSize),
                serverPaging: true,
                serverFiltering: true,
                serverSorting: true
            },
            pageable: {
                refresh: true,
                pageSizes: [@(adminAreaSettings.GridPageSizes)]
            },
            editable: {
                confirmation: false,
                mode: "inline"
            },
            scrollable: false,
            columns: [
                {
                    field: "Species.EnglishName",
                    title: "@T("Admin.Market.CropCategory")",
                    width: 400,
                    template: '<a class="k-link" href="Edit/#=Id#"><i class="fa fa-edit"/>&nbsp#=kendo.htmlEncode((Species.EnglishName == null) ? " ": Species.EnglishName)#</a>',

                },

                {
                field: "Breed.EnglishName",
                title: "@T("Admin.Market.CropName")",
                width: 400,
                },


                    {
                        field: "MinPrice",
                        title: "@T("Admin.Market.MinPrice")",
                        width: 400,

                },
                      {
                          field: "MaxPrice",
                        title: "@T("Admin.Market.MaxPrice")",
                        width: 400,

                },
                       {
                           field: "WholesalePrice",
                        title: "@T("Admin.Market.WholesalePrice")",
                        width: 400,

                },
                          {
                              field: "FarmGetPrice",
                        title: "@T("Admin.Market.FarmGetPrice")",
                        width: 400,

                    },
                       {
                           field: "District",
                        title: "@T("Admin.Common.District")",
                        width: 400,

                },
                       {
                           field: "NameOfMarket",
                        title: "@T("Admin.Market.NameOfMarket")",
                        width: 400,

                },
                         {
                          field: "FiscalYear.NepaliFiscalYear",
                        title: "@T("Admin.Market.FicalYear")",
                        width: 400,

                    },


            ]

        });
    });
</script>