@using LIMS.Web.Areas.Admin.Models.GeneralCMS
@model GalleryModel
@{
    //page title
    ViewBag.Title = "Gallery";
}
<form method="post" asp-action="Edit">
    <div class="row">
        <div class="col-md-12">
            <div class="x_panel light form-fit">
                <div class="x_title">
                    <div class="caption">
                        <i class="fa fa-user"></i>
                        @T("Admin.Gallery.Picture.List")
                        <small><i class="fa fa-arrow-circle-left"></i>@Html.ActionLink(T("Admin.Gallery.BackToList").Text, "List")</small>
                    </div>


                </div>
                <vc:admin-widget widget-zone="blog_details_buttons" additional-data="null" />

                <admin-tabstrip name="farm-edit">
                    <items>
                        <tabstrip-item text="@T("Admin.Gallery.Edit")" tab-index="0">
                            <content>
                                <div>
                                    <partial name="_CreateOrUpdate" model="Model" />
                                </div>
                            </content>
                        </tabstrip-item>
                        @if (Model.Type == "Photo")
                        {
                        <tabstrip-item text="@T("Admin.Gallery.Images")" tab-index="1" id="tab-picture-farm">
                            <content>
                                <div>
                                    <partial name="_CreateOrUpdate.Pictures" model="Model" />
                                </div>
                            </content>
                        </tabstrip-item>
                        }
                    </items>
                </admin-tabstrip>
            </div>
        </div>
    </div>
</form>

