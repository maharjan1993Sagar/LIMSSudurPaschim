@model CustomerModel
@{
    //page title
    ViewBag.Title = T("Admin.User.Edit").Text;
}
<style>
    .control input:checked ~ .control__indicator {
        background: #428bca !important;
    }
</style>
<form method="post" asp-action="EditAdmin">
    <div class="row">
        <div class="col-md-12">
            <div class="x_panel light form-fit">
                <div class="x_title">


                </div>
                <vc:admin-widget widget-zone="blog_details_buttons" additional-data="null" />


                <div class="form-horizontal">
                    <div asp-validation-summary="All"></div>

                    <input type="hidden" asp-for="Id" />
                    <div class="form-row">

                        @if (String.IsNullOrEmpty(Model.Id))
                        {
                            <div class="col-md-3">

                                <div class="form-group">
                                    <admin-label asp-for="Email" />

                                    <input asp-for="Email" class="form-control" />
                                    <span asp-validation-for="Email"></span>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="form-group">

                                    <admin-label asp-for="Password" />

                                    <div class="input-group">
                                        <div class="input-icon">
                                            <admin-input asp-for="Password" />
                                        </div>

                                    </div>
                                </div>
                            </div>


                        }
                        else
                        {
                            <div class="col-md-3">

                                <div class="form-group">
                                    <admin-label asp-for="Email" />

                                    <input asp-for="Email" class="form-control" readonly />
                                    <span asp-validation-for="Email"></span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">

                                    <admin-label asp-for="Password" />

                                    <div class="input-group">
                                        <div class="input-icon">
                                            <admin-input asp-for="Password" />
                                        </div>

                                    </div>
                                </div>
                            </div>

                        }


                        <div class="col-md-3">
                            <div class="form-group">
                                <admin-label asp-for="FirstName" />
                                <admin-input asp-for="FirstName" />
                                <span asp-validation-for="FirstName"></span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <admin-label asp-for="LastName" />
                                <admin-input asp-for="LastName" />
                                <span asp-validation-for="LastName"></span>
                            </div>
                        </div>

                        <div class="col-md-2">

                            <div class="form-group">
                                <admin-label asp-for="PhoneNo" />
                                <admin-input asp-for="PhoneNo" />
                                <span asp-validation-for="PhoneNo"></span>
                            </div>
                        </div>
                        <div class="col-md-2">

                            <div class="form-group">
                                <admin-label asp-for="MobileNo" />
                                <admin-input asp-for="MobileNo" />
                                <span asp-validation-for="MobileNo"></span>
                            </div>
                        </div>
