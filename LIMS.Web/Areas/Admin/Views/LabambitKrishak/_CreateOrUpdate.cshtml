@model LabambitKrishakModel
<div class="x_content form">
    <div class="form-row">
            <div class="col-md-2 col-sm-2">

                <div class="form-group">
                    <admin-label asp-for="FiscalyearId" />
                    <admin-select asp-for="FiscalyearId" asp-items="@ViewBag.FiscalYearId" />
                    <span asp-validation-for="FiscalyearId"></span>

                </div>
            </div>
            <div class="col-md-5 col-sm-5">

                <div class="form-group">
                    <admin-label asp-for="PujigatKharchaKaryakramId" />
                    <admin-select asp-for="PujigatKharchaKaryakramId"  required="required">
                        <option value="">select</option>

                        </admin-select>
                    <span asp-validation-for="PujigatKharchaKaryakramId"></span>

                </div>
            </div>
            <div class="col-md-3 col-sm-3">

                <div class="form-group">
                    <admin-label asp-for="BeneficiaryType" />
                    <admin-select asp-for="BeneficiaryType">
                        <option value="">Select</option>

                        <option value="Farmer">Farmer</option>
                        <option value="Farmer groups">Farmer groups</option>
                        <option value="Private farm">Private farm</option>
                        <option value="Cooperative">Cooperative</option>

                        <option value="Industry">Industry</option>
                        <option value="Others">Others</option>

                    </admin-select>
                    <span asp-validation-for="BeneficiaryType"></span>

                </div>
            </div>

            <div class="col-md-3">

                <div class="form-group">
                    <admin-label asp-for="Province" />
                    <select name="Provience" id="country" data-val="Sudurpashchim Province" class="form-control">
                        <option value="">select</option>
                    </select>

                </div>
            </div>

            <div class="col-md-3">

                <div class="form-group">
                    <admin-label asp-for="District" />
                    <select name="district" id="district" data-val="@Model.District" class="form-control">
                        <option value="">select</option>
                    </select>
                    <span asp-validation-for="District"></span>

                </div>
            </div>
            <div class="col-md-3">

                <div class="form-group">
                    <admin-label asp-for="LocalLevel" />
                    <select name="LocalLevel" id="locallevel" data-val="@Model.LocalLevel" class="form-control">
                        <option value="">select</option>
                    </select>
                    <span asp-validation-for="LocalLevel"></span>

                </div>
            </div>
            <div class="col-md-1">

                <div class="form-group">
                    <admin-label asp-for="WardNo" />
                    <admin-input asp-for="WardNo" />

                    <span asp-validation-for="WardNo"></span>

                </div>
            </div>
            <div class="col-md-2">

                <div class="form-group">
                    <admin-label asp-for="Tole" />
                    <admin-input asp-for="Tole" />

                    <span asp-validation-for="Tole"></span>

                </div>
            </div>
            <div class="col-md-2">

                <div class="form-group">
                    <admin-label asp-for="LabambitKrishakKoNam" />
                    <admin-input asp-for="LabambitKrishakKoNam" />
                    <span asp-validation-for="LabambitKrishakKoNam"></span>

                </div>
            </div>
            <div class="col-md-2">

                <div class="form-group">
                    <admin-label asp-for="Sex" />
                    <admin-input asp-for="Sex" />

                    <span asp-validation-for="Sex"></span>

                </div>
            </div>
            <div class="col-md-2">

                <div class="form-group">
                    <admin-label asp-for="PhoneNo" />
                    <admin-input asp-for="PhoneNo" />

                    <span asp-validation-for="PhoneNo"></span>

                </div>
            </div>
            <div class="col-md-2">

                <div class="form-group">
                    <admin-label asp-for="EthinicGroup" />
                    <admin-input asp-for="EthinicGroup" />

                    <span asp-validation-for="EthinicGroup"></span>

                </div>
            </div>
            <div class="col-md-2">

                <div class="form-group">
                    <admin-label asp-for="Remarks" />
                    <admin-input asp-for="Remarks" />

                    <span asp-validation-for="Remarks"></span>

                </div>
            </div>

            <div class="col-md-12">

                <div class="form-group">
                    <admin-label asp-for="WorkDone" />
                    <admin-textarea asp-for="WorkDone" />

                    <span asp-validation-for="WorkDone"></span>

                </div>
            </div>




            <div class="col-md-2">

                <div class="form-group">
                    <admin-label asp-for="PictureId" />
                    <admin-input asp-for="PictureId" />

                    <span asp-validation-for="PictureId"></span>

                </div>
            </div>


        </div>
    </div>
<script>
     $("document").ready(function () {
         $("#@Html.IdFor(m=>m.FiscalyearId)").change(function () {
             fiscalyear = $(this).val();
             data = {
                 fiscalyear: fiscalyear
             }
             if (fiscalyear) {
                 url = "/Admin/LabambitKrishak/GetProgram";
                 $.getJSON(url, data, function (result) {
                     $.each(result, function (i, item) {
                         $("#@Html.IdFor(m=>m.PujigatKharchaKaryakramId)").append(`<option value="${item.Id}">${item.Program}</option>`);
                     });
                 })
             }
         });
     });
</script>