                    <span asp-validation-for="SpeciesId"></span>

                </div>
            </div>
            <div class="col-md-3 col-sm-3">

                <div class="form-group">
                    <admin-label asp-for="EnglishName" />
                    <admin-input asp-for="EnglishName" />
                    <span asp-validation-for="EnglishName"></span>

                </div>
            </div>
            <div class="col-md-3">

                <div class="form-group">
                    <admin-label asp-for="NepaliName" />
                    <admin-input asp-for="NepaliName" />
                    <span asp-validation-for="NepaliName"></span>

                </div>
            </div>

            <div class="col-md-3">
                <div class="form-group">
                    <admin-label asp-for="ScientificName" />
                    <admin-input asp-for="ScientificName" />
                    <span asp-validation-for="ScientificName"></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <admin-label asp-for="GrowingSeason" />
                    <admin-input asp-for="GrowingSeason" />
                    <span asp-validation-for="GrowingSeason"></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <admin-label asp-for="GrowingDuration" />
                    <admin-input asp-for="GrowingDuration" />
                    <span asp-validation-for="GrowingDuration"></span>
                </div>
            </div>


            <div class="col-md-12">

                <div class="form-group">
                    <admin-label asp-for="Detail" />
                    <admin-textarea asp-for="Detail" />
                    <span asp-validation-for="Detail"></span>

                </div>
            </div>

        </div>
    </div>
</div>


