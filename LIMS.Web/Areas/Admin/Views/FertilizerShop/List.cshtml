@inject AdminAreaSettings adminAreaSettings
@{
    //page title
    ViewBag.Title = T("Admin.OtherOrganization.FertilizerShop").Text;
}

<form asp-area="@Constants.AreaAdmin" asp-controller="FertilizerShop" asp-action="List" method="post">

    <div class="row">
        <div class="col-md-12">
            <div class="x_panel light form-fit">
                <div class="x_title">
                    <div class="caption text-center">
                        <!-- <i class="fa fa-comment"></i>-->
                        @T("Admin.FertilizerShop.List")
                    </div>
                    <div class="actions btn-group btn-group-devided">
                        <a asp-action="Create" class="btn green"><i class="fa fa-plus"></i><span class="d-none d-sm-inline"> @T("Admin.Common.AddNew") </span></a>
                    </div>
                </div>
                <div class="x_content form">
                    <div class="form-horizontal">

                        <div class="form-body col-md-6">

                            <div class="form-group">

                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="form-actions d-flex flex-column w-100">
                            <div class="row">

                            </div>
                        </div>
                        <div class="x_content">
                            <div id="FertilizerShop-grid"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<script src="https://kendo.cdn.telerik.com/2021.1.330/js/pako_deflate.min.js"></script>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://kendo.cdn.telerik.com/2020.1.406/js/jszip.min.js"></script>
<script src="https://kendo.cdn.telerik.com/2020.1.406/js/kendo.all.min.js"></script>

<script>
    $(document).ready(function () {
        //search button
        $('#search-FertilizerShop').click(function () {
            //search
            var grid = $('#FertilizerShop-grid').data('kendoGrid');
            grid.dataSource.page(1); //new search. Set page size to 1
            //grid.dataSource.read(); we already loaded the grid above using "page" function
            return false;
        });

        $("#FertilizerShop-grid").kendoGrid({
            toolbar: ["pdf"],
            pdf: {
                allPages: true,
                avoidLinks: true,
                paperSize: "A4",
                margin: { top: "1cm", left: "0.5cm", right: "0.5cm", bottom: "1cm" },
                landscape: true,
                repeatHeaders: false,
                template: $("#page-template").html(),
                scale: 0.8,
                encoded: false
            },
            dataSource: {
                transport: {
                    read: {
                        url: "@Html.Raw(Url.Action("List", "FertilizerShop"))",
                        type: "POST",
                        dataType: "json",
                        data: additionalData
                    }
                },
                schema: {
                    data: "Data",
                    total: "Total",
                    errors: "Errors"
                },
                error: function(e) {
                    display_kendoui_grid_error(e);

                    this.cancelChanges();
                },
                pageSize: @(adminAreaSettings.DefaultGridPageSize),
                serverPaging: true,
                serverFiltering: true,
                serverSorting: true
            },
            pageable: {
                refresh: true,
                pageSizes: [@(adminAreaSettings.GridPageSizes)]
            },
            editable: {
                confirmation: false,
                mode: "inline"
            },
            scrollable: false,
            columns: [
                {
                field: "OtherOrganization.NameEnglish",
                title: "@T("Admin.OtherOrganization.NameEnglish")",
                width: 150,
                },
                {
                 title: "@T("Admin.OtherOrganization.Address")",
                 width: 200,
                 template: "#=OtherOrganization.LocalLevel#  #=OtherOrganization.District#"
                },
                {
                    field: "OtherOrganization.ContactPerson",
                title: "@T("Admin.OtherOrganization.ContactPerson")",
                width: 100,
                 },
                {
                    field: "OtherOrganization.MobileNo",
                    title: "@T("Admin.OtherOrganization.ContactNo")",
                    width: 100,
                },
                {
                    field: "Fertilizer1",
                    title: "@T("Admin.FertilizerShop.Fertilizer1")",
                    width: 100,
                },
                 {
                    field: "Fertilizer2",
                    title: "@T("Admin.FertilizerShop.Fertilizer2")",
                    width: 100,
                },
                {
                    field: "Fertilizer3",
                    title: "@T("Admin.FertilizerShop.Fertilizer3")",
                    width: 100,
                },
                {
                    field: "FertilizerOther",
                    title: "@T("Admin.FertilizerShop.FertilizerOther")",
                    width: 100,
                },
            ]
        });
    });

    function additionalData() {
        var data = {
            Keyword:$("#Keyword").val()
        };
        addAntiForgeryToken(data);
        return data;
    }
</script>
