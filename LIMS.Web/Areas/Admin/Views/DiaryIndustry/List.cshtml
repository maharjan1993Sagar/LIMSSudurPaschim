@inject AdminAreaSettings adminAreaSettings
@model FarmListModel
@{
    //page title
    ViewBag.Title = T("Admin.OtherOrganization.DiaryShop").Text;
}
@inject IWorkContext workContext
@{
    List<string> roles = workContext.CurrentCustomer.CustomerRoles.Select(x => x.Name).ToList();


}


<form asp-area="@Constants.AreaAdmin" asp-controller="DiaryIndustry" asp-action="List" method="post">

    <div class="row">
        <div class="col-md-12">
            <div class="x_panel light form-fit">
                <div class="x_title">
                    <div class="caption text-center">
                        <!-- <i class="fa fa-comment"></i>-->
                        @T("Admin.OtherOrganization.DiaryIndustry")
                    </div>
                    @*@if (!roles.Contains("DolfdUser") && !roles.Contains("DolfdAdmin"))
                    {*@
                        <div class="actions btn-group btn-group-devided">
                            <a href="@Url.Action("Create")" class="btn green"><i class="fa fa-plus"></i><span class="d-none d-sm-inline"> @T("Admin.Common.AddNew") </span></a>
                        </div>
                    @*}*@
                </div>
                <div class="x_content form">
                    <div class="form-inline">

                        <div class="form-body col-md-12">
                            <div class="form-group">
                                <label class="col-2 col-sm-2 col-md-2 control-label">@T("Admin.common.FiscalYear") </label>
                                <div class="col-2 col-md-3 col-sm-3">
                                    <admin-select asp-for="Fiscalyear" asp-items="ViewBag.FiscalYearId">
                                    </admin-select>
                                </div>
                                <div class="col-md-5 col-sm-5">
                                    <button class="btn btn-success filter-submit" id="search-diaryIndustry" style="font-size: 13px!important;">
                                        <i class="fa fa-search"></i> @T("admin.common.search")
                                    </button>
                                </div>
                            </div>
                            <div class="form-group">

                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="form-actions d-flex flex-column w-100">
                            <div class="row">

                            </div>
                        </div>
                        <div class="x_content">
                            <div id="diaryIndustry-grid"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<script src="https://kendo.cdn.telerik.com/2021.1.330/js/pako_deflate.min.js"></script>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://kendo.cdn.telerik.com/2020.1.406/js/jszip.min.js"></script>
<script src="https://kendo.cdn.telerik.com/2020.1.406/js/kendo.all.min.js"></script>

<script>
                var fiscalyear = $("#dropdownlist").kendoDropDownList({
            optionLabel: "@T("Admin.common.Select")",
            dataTextField: "NepaliFiscalYear",
            dataValueField: "Id",
            dataSource: {
                transport: {
                    read: {
                        url: "@Html.Raw(Url.Action("FiscalYearList", "FiscalYear"))",
                        type: "Get",
                        dataType: "json",
                    }
                },
            },
            filter: "startswith",
            filtering: function (e) {
                //get filter descriptor
                var filter = e.filter;

                // handle the event
            }
        });

    $(document).ready(function () {
        //search button
        $('#search-diaryIndustry').click(function () {
            //search
            var grid = $('#diaryIndustry-grid').data('kendoGrid');
            grid.dataSource.page(1); //new search. Set page size to 1
            //grid.dataSource.read(); we already loaded the grid above using "page" function
            return false;
        });

        $("#diaryIndustry-grid").kendoGrid({
            toolbar: ["excel"],
            pdf: {
                allPages: true,
                avoidLinks: true,
                paperSize: "A3",
                margin: { top: "1cm", left: "0.5cm", right: "0.5cm", bottom: "1cm" },
                landscape: true,
                repeatHeaders: false,
                template: $("#page-template").html(),
                scale: 0.8,
                encoded: false
            },
            dataSource: {
                transport: {
                    read: {
                        url: "@Html.Raw(Url.Action("List", "DiaryIndustry"))",
                        type: "POST",
                        dataType: "json",
                        data: additionalData
                    },
                    update: {
                        url: "@Html.Raw(Url.Action("Update", "DiaryIndustry"))",
                        type: "POST",
                        dataType: "json",
                        data: addAntiForgeryToken,
                        complete: function (response) {
                            $("#diaryIndustry-grid").data("kendoGrid").dataSource.read();
                        }
                    },
                },
                schema: {
                    data: "Data",
                    total: "Total",
                    errors: "Errors",
                    model: {
                        id: "Id",
                        fields: {
                            Id: { editable: false, nullable: true },
                            TotalMilkConsumption: { editable: true, type: "number", validation: { required: true, min: 1 } },
                            Curd: { editable: true, type: "number", validation: { required: true, min: 1 } },
                            Ghew: { editable: true, type: "number", validation: { required: true, min: 1 } },
                            Cheese: { editable: true, type: "number", validation: { required: true, min: 1 } },
                            Cgurpi: { editable: true, type: "number", validation: { required: true, min: 1 } },
                            Panir: { editable: true, type: "number", validation: { required: true, min: 1 } },
                            IceCream: { editable: true, type: "number", validation: { required: true, min: 1 } },
                            Methai: { editable: true, type: "number", validation: { required: true, min: 1 } },
                            Others: { editable: true, type: "number", validation: { required: true, min: 1 } },
                            MaleManPower: { editable: true, type: "number", validation: { required: true, min: 1 } },
                            FemaleManPower: { editable: true, type: "number", validation: { required: true, min: 1 } },

                            'FiscalYear.NepaliFiscalYear': { editable: false },
                            'OtherOrganization.NameNepali': { editable: false },
                            'OtherOrganization.ContactPersonName': { editable: false },
                            'OtherOrganization.MobileNo': { editable: false }
                        }
                    }
                },
                error: function(e) {
                    display_kendoui_grid_error(e);

                    this.cancelChanges();
                },
                pageSize: @(adminAreaSettings.DefaultGridPageSize),
                serverPaging: true,
                serverFiltering: true,
                serverSorting: true
            },
            pageable: {
                refresh: true,
                pageSizes: [@(adminAreaSettings.GridPageSizes)]
            },
            editable: {
                confirmation: false,
                mode: "inline"
            },
            scrollable: true,
            columns: [
                {
                    field: "OtherOrganization.NameEnglish",
                title: "@T("Admin.DiaryIndustry.EnglishName")",
                width: 100,
                },
                {
                 title: "@T("Admin.OtherOrganization.Address")",
                    width: 150,
                    template: "#=OtherOrganization.LocalLevel#  #=OtherOrganization.District#"
                },
                {
                    field: "OtherOrganization.ContactPersonName",
                title: "@T("Admin.OtherOrganization.ContactPerson")",
                width: 80,
            },
                {
                    field: "OtherOrganization.MobileNo",
                    title: "@T("Admin.OtherOrganization.ContactNo")",
                    width: 80,
                },
                {
                    field: "TotalMilkConsumption",
                    title: "@T("Admin.DiaryIndustry.TotalMilkConsumption")",
                    width: 80,
                },


                {
                    field: "Milk",
                    title: "@T("Admin.DiaryIndustry.Milk")",
                    width: 50,
                },
                 {
                   field: "Curd",
                    title: "@T("Admin.DiaryIndustry.Curd")",
                    width: 50,
                },
               {
                   field: "Ghew",
                    title: "@T("Admin.DiaryIndustry.Ghew")",
                    width: 50,
                },
               {
                   field: "Panir",
                    title: "@T("Admin.DiaryIndustry.Panir")",
                    width: 50,
                },


                {
                    field: "Cheese",
                    title: "@T("Admin.DiaryIndustry.Cheese")",
                    width: 50,
                },
                {
                    field: "Churpi",
                    title: "@T("Admin.DiaryIndustry.Churpi")",
                    width: 50,
                },
                 {
                    field: "IceCream",
                    title: "@T("Admin.DiaryIndustry.IceCream")",
                    width: 50,
                },
                  {
                      field: "Methai",
                    title: "@T("Admin.DiaryIndustry.Methai")",
                    width: 50,
                },
                  {
                      field: "Others",
                    title: "@T("Admin.DiaryIndustry.Others")",
                    width: 50,
                },
                  {
                      field: "MaleManPower",
                    title: "@T("Admin.DiaryIndustry.MaleManPower")",
                    width: 50,
                },
                   {
                      field: "FemaleManPower",
                    title: "@T("Admin.DiaryIndustry.FemaleManPower")",
                    width: 80,
                },

            ]
        });
    });

    function additionalData() {
        var data = {
            Keyword: $("#dropdownlist").val()
        };
        addAntiForgeryToken(data);
        return data;
    }
</script>
