@inject AdminAreaSettings adminAreaSettings
@{
    //page title
    ViewBag.Title = "Lss ";
}

<form asp-area="@Constants.AreaAdmin" asp-controller="MoAMAC" asp-action="List" method="post">
    <div class="row">
        <div class="col-md-12">
            <div class="x_panel light form-fit">
                <div class="x_title">
                    <div class="caption">
                        <i class="fa fa-comment"></i>
                        @T("Admin.Organization.LIST")
                    </div>
                    <div class="actions btn-group btn-group-devided">
                        <a href="@Url.Action("Create")" class="btn green"><i class="fa fa-plus"></i><span class="d-none d-sm-inline"> @T("Admin.Common.AddNew") </span></a>
                    </div>
                </div>
                <div class="x_content">
                    <div id="moamac-grid"></div>
                </div>
            </div>
        </div>
    </div>

    <script>
    $(document).ready(function () {
        $("#moamac-grid").kendoGrid({
            dataSource: {
                transport: {
                    read: {
                        url: "@Html.Raw(Url.Action("List", "Organization"))",
                        type: "POST",
                        dataType: "json",
                        data: addAntiForgeryToken
                    }
                },
                schema: {
                    data: "Data",
                    total: "Total",
                    errors: "Errors"
                },
                error: function(e) {
                    display_kendoui_grid_error(e);
                    // Cancel the changes
                    this.cancelChanges();
                },
                pageSize: @(adminAreaSettings.DefaultGridPageSize),
                serverPaging: true,
                serverFiltering: true,
                serverSorting: true
            },
            pageable: {
                refresh: true,
                pageSizes: [@(adminAreaSettings.GridPageSizes)]
            },
            editable: {
                confirmation: false,
                mode: "inline"
            },
            scrollable: false,
            columns: [{
                field: "NameEnglish",
                title: "@T("Admin.Organization.Field.EnglishName")",
                width: 300,
                template: '<a class="k-link" href="Edit/#=Id#"><i class="fa fa-edit"/>&nbsp#=kendo.htmlEncode(NameEnglish)#</a>',
            },
                {
                    field: "NameNepali",
                    title: "@T("Admin.Organization.Field.NepaliName")",
                    width: 300,
                },
                {
                    field: "Provience",
                    title: "@T("Admin.Organization.Provience")",
                    width: 300,
                },
                {
                    field: "District",
                    title: "@T("Admin.Organization.District")",
                    width: 300,
                },



            ]

        });
    });
    </script>
</form>
