@inject AdminAreaSettings adminAreaSettings
@{
   
    ViewBag.Title = "Fiscal year ";
}

<div class="row">
    <div class="col-md-12">
        <div class="x_panel light form-fit">
            <div class="x_title">
                <div class="caption">
                    <i class="fa fa-comment"></i>
                    @T("Admin.Fiscalyear.LIST")
                </div>
                <div class="actions btn-group btn-group-devided">
                    <a href="@Url.Action("Create")" class="btn green"><i class="fa fa-plus"></i><span class="d-none d-sm-inline"> @T("Admin.Common.AddNew") </span></a>
                </div>
            </div>
            <div class="x_content">
                <div id="unit-grid"></div>
            </div>
        </div>
    </div>
</div>

<script>

    $(document).ready(function () {
        $("#unit-grid").kendoGrid({
            dataSource: {
                transport: {
                    read: {
                        url: "@Html.Raw(Url.Action("List", "Fiscalyear"))",
                        type: "POST",
                        dataType: "json",
                        data: addAntiForgeryToken
                    }
                },
                schema: {
                    data: "Data",
                    total: "Total",
                    errors: "Errors"
                },
                error: function(e) {
                    display_kendoui_grid_error(e);
                    // Cancel the changes
                    this.cancelChanges();
                },
                pageSize: @(adminAreaSettings.DefaultGridPageSize),
                serverPaging: true,
                serverFiltering: true,
                serverSorting: true
            },
            pageable: {
                refresh: true,
                pageSizes: [@(adminAreaSettings.GridPageSizes)]
            },
            editable: {
                confirmation: false,
                mode: "inline"
            },
            scrollable: false,
            columns: [{
                field: "NepaliFiscalYear",
                title: "@T("Admin.BasicSetup.NepaliFiscalYear")",
                width: 300,
                template: '<a class="k-link" href="Edit/#=Id#"><i class="fa fa-edit"/>&nbsp#=kendo.htmlEncode(NepaliFiscalYear)#</a>',
            },
                {
                    field: "EnglishFiscalYear",
                    title: "@T("Admin.BasicSetup.EnglishFiscalYear")",
                    width: 300,
                },

            ]

        });
    });
</script>
