@model LIMS.Web.Areas.Admin.Models.GeneralCMS.BannerModel

@{
    //page title
    ViewBag.Title = "";
}

    <div class="row">
        <div class="col-md-12">
            <div class="x_panel light form-fit">
                <div class="x_title">
                    <div class="caption">
                        <i class="fa fa-comment"></i>
                        @T("Admin.Banner.Detail")
                        @*@T("Admin.ContentManagement.Blog.BlogPosts.AddNew")*@
                        <small><i class="fa fa-arrow-circle-left"></i>@Html.ActionLink("Back To list", "List")</small>
                    </div>
                   
                </div>
                <vc:admin-widget widget-zone="blog_details_buttons" additional-data="null" />
                <div class="x_content form">
                  <div class="col-md-12">
                      <p><img src="@(Model.ImageModel.PictureUrl)" height="500" width="400"/></p>
                      <p>@T("Admin.banner.Title"):@Model.Title</p>
                      <p>@T("Admin.banner.Description"):@Model.Description</p>
                      <p>@T("Admin.banner.IsActive"):@Model.IsActive</p>
                  </div>
                </div>





            </div>
        </div>
    </div>
