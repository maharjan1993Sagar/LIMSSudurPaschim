@inject AdminAreaSettings adminAreaSettings
@{
    //page title
    ViewBag.Title = "Unit ";
}

    <div class="row">
        <div class="col-md-12">
            <div class="x_panel light form-fit">
                <div class="x_title">
                    <div class="caption">
                        <i class="fa fa-comment"></i>
                        @T("Admin.Unit.LIST")
                    </div>
                    <div class="actions btn-group btn-group-devided">
                        <a href="@Url.Action("Create")" class="btn green"><i class="fa fa-plus"></i><span class="d-none d-sm-inline"> @T("Admin.Common.AddNew") </span></a>
                    </div>
                </div>
                <div class="x_content">
                    <div id="unit-grid"></div>
                </div>
            </div>
        </div>
    </div>

    <script>
        
    $(document).ready(function () {
        $("#unit-grid").kendoGrid({
            dataSource: {
                transport: {
                    read: {
                        url: "@Html.Raw(Url.Action("List", "Unit"))",
                        type: "POST",
                        dataType: "json",
                        data: addAntiForgeryToken
                    }
                },
                schema: {
                    data: "Data",
                    total: "Total",
                    errors: "Errors"
                },
                error: function(e) {
                    display_kendoui_grid_error(e);
                    // Cancel the changes
                    this.cancelChanges();
                },
                pageSize: @(adminAreaSettings.DefaultGridPageSize),
                serverPaging: true,
                serverFiltering: true,
                serverSorting: true
            },
            pageable: {
                refresh: true,
                pageSizes: [@(adminAreaSettings.GridPageSizes)]
            },
            editable: {
                confirmation: false,
                mode: "inline"
            },
            scrollable: false,
            columns: [{
                field: "UnitNameEnglish",
                title: "@T("Admin.BasicSetup.UnitNameEnglish")",
                width: 300,
                template: '<a class="k-link" href="Edit/#=Id#">#=kendo.htmlEncode(UnitNameEnglish)#</a>',
            },
                {
                    field: "UnitNameNepali",
                    title: "@T("Admin.BasicSetup.UnitNameNepali")",
                    width: 300,
                },
                 {
                    field: "UnitShortName",
                    title: "@T("Admin.BasicSetup.UnitShortName")",
                    width: 300,
                },


            ]

        });
    });
    </script>
